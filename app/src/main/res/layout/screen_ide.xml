<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen_IDE">


    <androidx.appcompat.widget.SearchView
        android:id="@+id/screen_ide_search"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/screen_ide_code"
        app:layout_constraintEnd_toStartOf="@+id/screen_ide_code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <uk.ac.tees.cis2003.froyo.GUI.NumberedTextView
        android:id="@+id/screen_ide_code"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:bufferType="spannable"
        android:focusable="true"
        android:gravity="start|top"
        android:imeOptions="flagNoFullscreen"
        android:inputType="textVisiblePassword|textMultiLine|textNoSuggestions"
        android:scrollbars="horizontal|vertical"
        android:scrollHorizontally="true"
        android:textIsSelectable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/screen_ide_search"
        app:layout_constraintTop_toBottomOf="@+id/screen_ide_search" />
        <!--- android:layout_marginTop="50dp" -->

</androidx.constraintlayout.widget.ConstraintLayout>