<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/screen_file_viewer_up_directory"
            android:background="@null"
            android:src="@drawable/ic_up_directory_24dp"
            android:contentDescription="@string/file_manager_description_up_directory"
            android:layout_margin="2dp"
            android:rotation="90"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/screen_file_viewer_dir_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/file_manager_current_file_path"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/screen_file_viewer_dir_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="18sp" />

        </LinearLayout>


    </LinearLayout>

    <View style="@style/Divider"/>

    <ListView
        android:id="@+id/screen_file_viewer_file_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>

    <LinearLayout
        android:id="@+id/screen_file_viewer_button_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/screen_file_viewer_button_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/file_manager_action_delete"
            android:visibility="gone"/>

        <Button
            android:id="@+id/screen_file_viewer_button_rename"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/file_manager_action_rename"
            android:visibility="gone"/>

        <Button
            android:id="@+id/screen_file_viewer_button_copy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/file_manager_action_copy"
            android:visibility="gone"/>

        <Button
            android:id="@+id/screen_file_viewer_button_cut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/file_manager_action_cut"
            android:visibility="gone"/>

        <Button
            android:id="@+id/screen_file_viewer_button_paste"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/file_manager_action_paste"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>